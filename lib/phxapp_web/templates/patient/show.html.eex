<h1>Show Patient</h1>

<ul>

  <li>
    <strong>First name:</strong>
    <%= @patient.first_name %>
  </li>

  <li>
    <strong>Last name:</strong>
    <%= @patient.last_name %>
  </li>

  <li>
    <strong>Birth date:</strong>
    <%= @patient.birth_date %>
  </li>

  <li>
    <strong>Ssn4:</strong>
    <%= @patient.ssn4 %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.patient_path(@conn, :edit, @patient) %></span>
<span><%= link "Back", to: Routes.patient_path(@conn, :index) %></span>
